<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".view.activity.AdminComercioActivity">


    <TextView
        android:id="@+id/Admin_comercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/admin_comercio"
        android:textColor="@color/colorNegro"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorCardCliente"
                android:elevation="16dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Nombre_Comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/nombre"
                        android:textColor="@color/colorNegro"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/inNombre_Comercio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_borde"
                        android:fontFamily="@font/montserrat"
                        android:hint="@string/hint_nombre"
                        android:inputType="textPersonName"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/categoria_Comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/Categoria"
                        android:textColor="@color/colorNegro"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/inCategoria_Comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_borde"
                        android:fontFamily="@font/montserrat"
                        android:hint="@string/hint_categoria"
                        android:inputType="number"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorCardCliente"
                android:elevation="16dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0"
                            android:src="@drawable/isotipo_marker_mapasdelnorte" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.35"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center_vertical"
                            android:text="@string/datos_de_zona" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/direccion_Comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/Direccion"
                        android:textColor="@color/colorNegro"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/inDireccion_Comercio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_borde"
                        android:fontFamily="@font/montserrat"
                        android:hint="@string/hint_direccion"
                        android:inputType="textPostalAddress"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/localidad_Comercio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/montserrat"
                                android:text="@string/localidad"
                                android:textColor="@color/colorNegro"
                                android:textSize="12sp" />


                            <EditText
                                android:id="@+id/inLocalidad_Comercio"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/edit_text_borde"
                                android:fontFamily="@font/montserrat"
                                android:hint="@string/hint_localidad"
                                android:inputType="text"
                                android:padding="8dp"
                                android:text=""
                                android:textSize="14sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/codigoPostal_Comercio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/montserrat"
                                android:text="@string/cod_postal"
                                android:textColor="@color/colorNegro"
                                android:textSize="12sp" />


                            <EditText
                                android:id="@+id/inCodigoPostal_Comercio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/edit_text_borde"
                                android:fontFamily="@font/montserrat"
                                android:hint="@string/hint_cp"
                                android:inputType="textPostalAddress"
                                android:padding="8dp"
                                android:text=""
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/provincia_Comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/provincia"
                        android:textColor="@color/colorNegro"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/inProvincia_Comercio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_borde"
                        android:fontFamily="@font/montserrat"
                        android:hint="escriba la provincia"
                        android:inputType="textPostalAddress"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/pais_Comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Pais"
                        android:textColor="@color/colorNegro"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/inPais_Comercio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_borde"
                        android:fontFamily="@font/montserrat"
                        android:hint="escriba el pais"
                        android:inputType="textPostalAddress"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorCardCliente"
                android:elevation="16dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0"
                            android:src="@drawable/isotipo_marker_mapasdelnorte" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center_vertical"
                            android:text="@string/datos_de_contacto" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/telefono_Comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/telefono"
                        android:textColor="@color/colorNegro"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/inTelefono_Comercio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_borde"
                        android:fontFamily="@font/montserrat"
                        android:hint="@string/hint_tel"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                    android:id="@+id/mail_Comercio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/mail"
                    android:textColor="@color/colorNegro"
                    android:textSize="12sp" />


                    <EditText
                        android:id="@+id/inMail_Comercio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_borde"
                        android:fontFamily="@font/montserrat"
                        android:hint="@string/hint_mail"
                        android:inputType="textPostalAddress"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_cargar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inCategoria_Comercio"
                android:text="cargar" />

            <Button
                android:id="@+id/btn_traer_datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_cargar"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="traer datos" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorCardCliente"
                android:elevation="16dp"
                app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/datos_Cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text=" "
                android:textAlignment="center"
                android:textColor="@color/colorNegro"
                android:textSize="16sp"
                />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>