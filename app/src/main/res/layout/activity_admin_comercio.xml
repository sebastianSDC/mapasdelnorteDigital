<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".View.Activities.AdminComercioActivity">

    <TextView
        android:id="@+id/Admin_comercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Comercio"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorNegro"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/Nombre_Comercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Admin_comercio"
        android:layout_weight="1"
        android:text="Nombre"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorNegro"
        android:textSize="12sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inNombre_Comercio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/Nombre_Comercio"
        android:background="@drawable/edit_text_borde"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:hint="escriba el nombre de su comercio o servicio"
        android:fontFamily="@font/montserrat"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/direccion_Comercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:text="Direccion"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorNegro"
        android:textSize="12sp"
        android:textStyle="bold" />
    >

    <EditText
        android:id="@+id/inDireccion_Comercio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/edit_text_borde"
        android:layout_below="@id/direccion_Comercio"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:hint="escriba direccion actual"
        android:fontFamily="@font/montserrat"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/telefono_Comercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/inDireccion_Comercio"
        android:text="Telefono"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorNegro"
        android:textSize="12sp"
        android:textStyle="bold" />
    >

    <EditText
        android:id="@+id/inTelefono_Comercio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/edit_text_borde"
        android:layout_below="@id/telefono_Comercio"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:hint="escriba un numero con codigo de area "
        android:fontFamily="@font/montserrat"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mail_Comercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
      android:layout_below="@id/inTelefono_Comercio"
        android:fontFamily="@font/montserrat"
        android:text="Mail"
        android:textColor="@color/colorNegro"
        android:textSize="12sp"
        android:textStyle="bold" />
    >

    <EditText
        android:id="@+id/inMail_Comercio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_text_borde"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/mail_Comercio"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:hint="escriba un mail valido"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_cargar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cargar"
        android:layout_below="@id/inMail_Comercio"
        />

    <Button
        android:id="@+id/btn_traer_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="traer datos"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@id/btn_cargar"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/datos_Cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_traer_datos"
        android:fontFamily="@font/montserrat_bold"
        android:text=" texto"
        android:textAlignment="center"
        android:textColor="@color/colorNegro"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>